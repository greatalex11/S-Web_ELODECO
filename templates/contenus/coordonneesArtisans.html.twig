{#{% extends '/base.html.twig' %}#}
{% set Apps = theme.theme %}

{% block content %}



    <!--        page coordonnees conditionnée par href "coordonnées" depuis page accueil artisan        -->
    <section class="mt-2 row justify-content-center m-auto">
        <section class="counters-one counters-one-martopminus d-flex row  text-center justify-content-xl-between"
                 style="max-height:100px; padding:30px; margin: 0 10% 0 10%">
            <ul class="portfolio-details__info-list list-unstyled">
                <li>{{ artisans.prenomGerant|striptags|default('prénom') }}</li>
                <li>{{ artisans.nomgerant|striptags|default('NOM')|upper }}</li>
                <li>{{ 'now'|date }}</li>
            </ul>
        </section>

        <section class="border">
            <div class="container">
                <div class="row">
                    <div class="bg-dark mt-5 mb-5">
                        <div class="row">
                            {% for message in app.flashes('success') %}
                                <div id="flash-message" class="alert alert-success">
                                    {{ message }}
                                    <button id="flashbtn" type="button" class="close">Fermer</button>
                                </div>
                            {% endfor %}
                        </div>

                        <!-- 1ere ligne -->
                        <div class="row bg-light">

                            <!-- 1 gauche sup -->
                            <div class="d-flex row col-3 justify-content-left m-2 "
                                 style=" background-color:whitesmoke">
                                <ul class="pricing-one__checks-list list-unstyled pt-3">
                                    <li class="p-2">
                                        <div class="pricing-one__checks-text-box">
                                            <h3 style="color: {{ theme.theme.couleurActuelleBg }}">{{ artisans.raisonSociale|striptags|default('77') }}</h3>
                                            <p class="counter-one__text">Raison sociale</p>
                                        </div>
                                    </li>

                                    <li class="p-2">
                                        <div class="pricing-one__checks-text-box">
                                            <h3 style="color: {{ theme.theme.couleurActuelleBg }}">{{ artisans.nomGerant|striptags|default('grande rue') }}</h3>
                                            <p class="counter-one__text">nom</p>
                                        </div>
                                    </li>
                                </ul>
                            </div>

                            <!-- 1 centre sup -->
                            <div class="d-flex row col-4 justify-content-left  m-2"
                                 style=" background-color:whitesmoke">

                                <ul class="pricing-one__checks-list list-unstyled" style="padding: 5%">
                                    <li class="p-2">
                                        <div class="pricing-one__checks-text-box">
                                            <h3 style="color: {{ theme.theme.couleurActuelleBg }}">{{ artisans.nomEtablissement|striptags|default('grande rue') }}</h3>
                                            <p class="counter-one__text">rue</p>
                                        </div>
                                    </li>

                                    <li class="p-2">
                                        <h3 style="color: {{ theme.theme.couleurActuelleBg }}"
                                            class="col-12"> {{ artisans.prenomGerant|striptags|default('praenomen') }}
                                        </h3>
                                        <p class="counter-one__text">Prénom</p>
                                    </li>
                                  </ul>
                            </div>

                            <div class="d-flex row col-4 justify-content-left m-2 "
                                 style=" background-color:whitesmoke">
                                <ul class="pricing-one__checks-list list-unstyled" style="padding: 5%">
                                    <li class="p-2">
                                        <div class="pricing-one__checks-text-box">
                                            <h3 style="color: {{ theme.theme.couleurActuelleBg }}">{{ artisans.siret|striptags|default('siret') }}</h3>
                                            <p class="counter-one__text">SIRET</p>
                                        </div>
                                    </li>

                                    <li class="p-2">
                                        <h3 style="color: {{ theme.theme.couleurActuelleBg }}"
                                            class="col-12"> {{ artisans.dateNaissance|date("m/d/Y")|default('01 janvier 1972') }}
                                        </h3>
                                        <p>Date de naissance</p>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <!-- 2eme ligne -->
                        <div class="row bg-light">

                            <div class="col-5 d-flex justify-content-left row m-2" style="background-color:whitesmoke">

                                <ul class="pricing-one__checks-list list-unstyled" style="padding: 5%">
                                    <li>
                                        <div class="pricing-one__checks-icon">
                                            <i class="icon-tick"></i>
                                        </div>

                                        <div class="pricing-one__checks-text-box">
                                            <h3 class="pricing-one__checks-title"
                                                style="color: {{ theme.theme.couleurActuelleBg }}"> {{ artisans.telPortable|striptags|default('03.84....') }}</h3>
                                            <p class="pricing-one__checks-text">Téléphone portable</p>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="pricing-one__checks-icon">
                                            <i class="icon-tick"></i>
                                        </div>

                                        <div class="pricing-one__checks-text-box">
                                            <h3 class="pricing-one__checks-title"> {{ artisans.telFixe|striptags|default('06 07....') }}</h3>
                                            <p class="pricing-one__checks-text">Téléphone fixe</p>
                                        </div>
                                    </li>
                                </ul>
                            </div>

                            <div class="col-5 d-flex justify-content-left row m-2" style="background-color:whitesmoke">

                                <ul class="pricing-one__checks-list list-unstyled" style="padding: 5%">


                                    <li>
                                        <div class="pricing-one__checks-icon">
                                            <i class="icon-tick"></i>
                                        </div>

                                        <div class="pricing-one__checks-text-box">
                                            <h3 class="col-12"> {{ artisans.fax|striptags|default('grande rue') }}
                                            </h3>
                                            <p class="counter-one__text">Fax</p>
                                        </div>
                                    </li>


                                    <li>
                                        <div class="pricing-one__checks-icon">
                                            <i class="icon-tick"></i>
                                        </div>

                                        <div class="pricing-one__checks-text-box">
                                            <h3 class="pricing-one__checks-title"> {{ artisans.user.email|striptags|default('06 07....') }}</h3>
                                            <p class="pricing-one__checks-text">email</p>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>


                    </div>

                    <!-- 3eme ligne -->

                    <div class="row bg-light m-0">

                        <div class="d-flex row col-4 justify-content-left  m-2 "
                             style=" background-color:whitesmoke">
                            <ul class="pricing-one__checks-list list-unstyled" style="padding: 5%">
                                <li>
                                    <div class="pricing-one__checks-icon">
                                        <i class="icon-tick"></i>
                                    </div>

                                    <div class="pricing-one__checks-text-box">
                                        <h3 class="odometer" style="color: {{ theme.theme.couleurActuelleBg }}"
                                            data-count="{{ artisans.numeroRue|striptags|default('77') }}">00</h3>
                                        <p class="counter-one__text">n°</p>
                                    </div>
                                </li>
                                <li>
                                    <div class="pricing-one__checks-icon">
                                        <i class="icon-tick"></i>
                                    </div>

                                    <div class="pricing-one__checks-text-box">
                                        <h3 style="color: {{ theme.theme.couleurActuelleBg }}">{{ artisans.codePostal|striptags|default('grande rue') }}</h3>
                                        <p class="counter-one__text">code postal</p>
                                    </div>
                                </li>
                            </ul>
                        </div>
                            <!-- 1 centre sup -->
                            <div class="d-flex row col-4 justify-content-left  m-lg-3 "
                                 style=" background-color:whitesmoke">
                                <ul class="pricing-one__checks-list list-unstyled" style="padding: 5%">
                                    <li>
                                        <div class="pricing-one__checks-icon">
                                            <i class="icon-tick"></i>
                                        </div>

                                        <div class="pricing-one__checks-text-box">
                                            <h3 style="color: {{ theme.theme.couleurActuelleBg }}">{{ artisans.nomRue|striptags|default('grande rue') }}</h3>
                                            <p class="counter-one__text">rue</p>
                                        </div>
                                    </li>

                                    <li>
                                        <div class="pricing-one__checks-icon">
                                            <i class="icon-tick"></i>
                                        </div>

                                        <div class="pricing-one__checks-text-box">
                                            <h3 style="color: {{ theme.theme.couleurActuelleBg }}"
                                                class="col-12"> {{ artisans.localite|striptags|default('grande rue') }}
                                            </h3>
                                            <p class="counter-one__text">Localité</p>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                </div>

                <div class="row-cols-6 d-flex flex-row-reverse bd-highlight mt-5 mb-5">
                    {#            <div> #}
                    {#                <a style="padding: 20px; border-radius: 20px ; margin: 10px;color:#FFFFFF;background-color: rgb(115, 115, 115)" #}
                    {#                   class="text-center portfolio-details__info-list list-unstyled alert-info" #}
                    {#                   href="{{ path('app_artisan_accueil',{ 'id': artisans.id}) }}"> <span class="m-2"><<</span>Retour</a> #}
                    {#            </div> #}

                    <div>
                        <a style="padding: 20px; border-radius: 20px ; margin: 10px;color:#FFFFFF;background-color: rgb(115, 115, 115)"
                           class=" text-center portfolio-details__info-list list-unstyled alert-info"
                           href="{{ path('app_artisan_change_coordonnees',{ 'id': artisans.id}) }}">Corriger<span
                                    class="m-2">>> </span> </a>
                    </div>
                </div>
            </div>
        </section>








{% endblock %}