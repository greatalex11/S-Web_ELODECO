{% set Apps = theme.theme %}
{# {% set renderedField = form_row(formLoadDoc) %} #}
{% block content %}

    <div>
        <h2 class="text-truncate mb-4 text-center border-bottom">Envoyez vos documents</h2>
    </div>
    {% if  documentIdArtisan is defined %}
        <div class="alert-primary bg-light m-4">
            {# Loader de vich #}
            <div>
                <div class="row justify-content-center m-auto bg-light mt-xl-5 p-1">
                    <div class="col-6 p-5" style="min-width: 320px;object-fit: contain">
                        {{ form_start(formLoadDoc) }}
                        <div class="row">
                            <div class="contact-page__input-box">
                                {{ form_row(formLoadDoc.documentsFile) }}
                            </div>
                            <div class="mt-5">
                                {{ form_row(formLoadDoc.titre, {'label':'Titre du document' }) }}
                            </div>
                            <div class="mt-5">
                                {{ form_row(formLoadDoc.type,{'label':'Type de document' }) }}
                            </div>
                            <div class="mt-5">
                                {{ form_row(formLoadDoc.projet, {'label':'Concerne le projet suivant' }) }}
                            </div>
                            <div class=" d-flex justify-content-end text-truncate mt-5 p-2">
                                {{ form_row(formLoadDoc.save) }}
                            </div>
                            <div class="mt-4">
                                {{ form_end(formLoadDoc) }}
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    {% endif %}
{% endblock %}