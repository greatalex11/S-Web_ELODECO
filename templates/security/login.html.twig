<html>
<head>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/css/kitecx.css') }}"/>
        <link rel="stylesheet" href="{{ asset('assets/css/kitecx-responsive.css') }}"/>
        <link rel="stylesheet" href="{{ asset('assets/vendors/bootstrap/css/bootstrap.min.css') }}"/>
    {% endblock %}

    {% block javascripts %}
        <script src="{{ asset('assets/vendors/jquery/jquery-3.5.1.min.js') }}"></script>
        <script src="{{ asset('assets/vendors/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
    {% endblock %}


</head>
<body>

{% block body %}
    <div class="container h-100 d-flex flex-column justify-content-center align-items-center m-auto">
        {# read and display all flash messages #}
        {% if app.request.query.get('verify', null) is not null %}
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                Vous devez valider votre compte par email avant de vous connecter.
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endif %}
        <div class="row w-100">
            <form method="post" class="w-25 flex-column justify-content-center mt-5 m-auto form-control p-3">
                <h1 class="h3 mb-3 font-weight-normal ">Accès à votre espace </h1>

                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="contact-page__input-box  mb-3">
                        Bonjour {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                       class="form-control contact-page__input-box mt-2 mb-2" autocomplete="email" required autofocus>
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control contact-page__input-box "
                       autocomplete="current-password" required>

                <input class="contact-page__input-box " type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}">

                <div class="contact-page__input-box w-100  mt-3">
                    <button class="thm-btn contact-page__btn w-100"
                            type="submit">
                        Se connecter
                    </button>
                </div>
            </form>
        </div>

        <div class="row w-100 mt-5">
            <div class="w-25 flex-column justify-content-center mt-5 m-auto form-control p-3">
                <h4 class=" font-weight-normal ">Créer un compte</h4>
                <a href="{{ path('app_register_choice') }}"
                   class="thm-btn contact-page__btn w-100">Nouveau
                    membre</a>

            </div>
        </div>

    </div>

{% endblock %}

</body>
</html>
