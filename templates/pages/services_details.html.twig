                             style="background-image: url(assets/images/resources/bureau-moyen.jpg);">
                        </div>
                        <div class="services-details__help-box-bg-overly"></div>
                        <h3 class="services-details__help-box-title">{{ Apps.titre2|default('Besoin d\'aide?') }} </h3>
