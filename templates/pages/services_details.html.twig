                    <div class="services-details__designing-box">
                        <div class="services-details__designing-list-box">
                            <h2 class="services-details__designing-list-box-title">Les atouts</h2>
                            <ul class="services-details__designing-list list-unstyled">
                                {% set list = service.liste %}


                                <li>
                                    <div class="icon">
                                        <i class="fas fa-slash"></i>
                                    </div>
                                    <div class="text">
                                        <p>{{ list[0] |default(('le métier en quelques mots'))|striptags  }}</p>
                                    </div>
                                </li>
                                <li>
                                    <div class="icon">
                                        <i class="fas fa-slash"></i>
                                    </div>
                                    <div class="text">
                                        <p>{{ list[1] |default(('100% Satisfait'))|striptags  }}</p>
                                    </div>
                                </li>
                                <li>
                                    <div class="icon">
                                        <i class="fas fa-slash"></i>
                                    </div>
                                    <div class="text">
                                        <p>{{ list[2] |default(('Respect des engagements'))|striptags  }}</p>
                                    </div>
                                </li>
