                            <div class="col-12">
                                <div class="news-details">
                                    <div class="container">
                                        <div class="row">

                                            <!--  BLOCK LATERAL DROIT  -->
                                            <div class="col-lg-10">
                                                <div class="sidebar__single sidebar__post">
                                                    <h3 class="sidebar__title">Mes services</h3>
                                                    <ul class="sidebar__post-list list-unstyled text-break">
                                                        {% for servicesF in serviceFiltres %}
                                                            {% if servicesF.titre1 is not empty %}
                                                                {% if servicesF.images.first %}
                                                                    {% set imageF = vich_uploader_asset(servicesF.images.first) %}
                                                                {% else %}
                                                                    {% set imageF = asset('assets/images/backgrounds/fond2.png') %}
                                                                {% endif %}
                                                                <li>
                                                                    <a class='d-flex align-items-center'
                                                                       href="{{ path('app_services_details',{slug: servicesF.slug }) }}">
                                                                        <div class="sidebar__post-image">
