                    </div>
{#                </div>  {{ dump(Apps)}}#}
            </div>
            <div class="col-xl-8 col-lg-7">
                <div class="services-details__right">
                    <div class="services-details__img">
                        <img src="{{image}}" style="height: 300px;width: 100%;object-fit: contain"
                             alt="{{ imageTitle }}">
                    </div>
                    <div class="services-details__content">
                        <h2 class="services-details__title">{{ service.titre1|default(('Designer'))|striptags }}</h2>
                        <p class="services-details__text-1"> {{ service.texte1|default(('le métier en quelques mots'))|striptags }} </p>
