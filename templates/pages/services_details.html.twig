<section class="services-details">
    <div class="container">
        <div class="row">
            <div class="col-xl-4 col-lg-5">
                <div class="services-details__sidebar">
                    <div class="services-details__services-list-box">
                        <ul class="services-details__services-list list-unstyled">
                            <li><a href="#">Aménagement d'intérieur<span class="icon-right-arrow"></span></a></li>
                            <li><a href="#">Architecture <span class="icon-right-arrow"></span></a></li>
                            <li><a href="#">Design & Planning <span class="icon-right-arrow"></span></a></li>
                            <li><a href="#">Home staging<span class="icon-right-arrow"></span></a></li>
                            <li><a href="#">Agencement optimisé <span class="icon-right-arrow"></span></a></li>
                            <li><a href="#">Assitance à la gestion <span class="icon-right-arrow"></span></a></li>
                        </ul>
                    </div>{
                    <div class="services-details__help-box">
