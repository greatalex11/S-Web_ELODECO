                                    </div><!-- /.inner -->
                                </div>
                            </div>
                            <div class="accrodion">
                                <div class="accrodion-title">
                                    <h4>{{ list[7] |default(('Planche de tendance et nuancier'))|striptags  }}</h4>
                                </div>
                                <div class="accrodion-content">
                                    <div class="inner">
                                        <p>{{ list[8] |default(('Votre dossier personnalisé vous suit dans toutes vos démarches, prêt à répondre à toutes vos inspirations.'))|striptags  }}</p>                                       </p>
