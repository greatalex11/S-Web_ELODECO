{% extends 'base.html.twig' %}

{% block content %}

    {% set Apps= theme.theme %}





    <!--                                                 -Bandeau supérieur   / image de font 1894x359 px                                           -->

    <section class="page-header" style="background-image: url({{ vich_uploader_asset(Apps.image1CarouselHome) }});">
        <div class="page-header-border"></div>
        <div class="page-header-border page-header-border-two"></div>
        <div class="page-header-border page-header-border-three"></div>
        <div class="page-header-border page-header-border-four"></div>
        <div class="page-header-border page-header-border-five"></div>
        <div class="page-header-border page-header-border-six"></div>
        <div class="container">
            <div class="page-header__inner">
                <h2>Styles de décorations</h2>
                <ul class="thm-breadcrumb list-unstyled">
                    <li><a href="{{ path('app_home') }}">Home</a></li>
                    <li><span>/</span></li>
                    <li>Styles en détails</li>
                </ul>
            </div>
        </div>
    </section>
    <!--                                                                fin bandeau supérieur                                                                   -->

    <!--                                                        SECTION  COMTEMPORAIN  / IMGAGE 1170 X 505                                                    -->
    <section class="portfolio-details">

            {% if styled.image.first %}
                {% set imageGd = vich_uploader_asset(styled.image.first) %}
                {% set imageTitle = styled.image.first.titre %}
            {% else %}
                {% set imageGd = asset('assets/images/backgrounds/fond2.png') %}
                {% set imageTitle = 'style en détails et par image' %}
            {% endif %}



            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="portfolio-details__img">
                            <img src="{{ imageGd }}" alt="{{ imageTitle }}" style="max-height:700px; object-fit: contain">
                            <div class="portfolio-details__info mt-3">
                                <ul class="portfolio-details__info-list list-unstyled">
                                    <li>{{ styled.attribut1 }}</li>
                                    <li>{{ styled.attribut2 }}</li>
                                    <li>{{ styled.attribut1 }}</li>
                                    <li>
                                        <div class="portfolio-details__social">
                                            <a href="#"><i class="fab fa-twitter"></i></a>
                                            <a href="#" class="clr-fb"><i class="fab fa-facebook"></i></a>
                                            <a href="#" class="clr-dri"><i class="fab fa-dribbble"></i></a>
                                            <a href="#" class="clr-ins"><i class="fab fa-instagram"></i></a>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="portfolio-details__content pb-0">
                            <h2 class="portfolio-details__title" >{{ styled.titre1 |default('exemple') }} {{ styled.titre2|default('type de décoration') }}  </h2>
                            <p class="portfolio-details__text-1">{{ styled.texte1|raw }}</p>
                            <ul class="portfolio-details__list list-unstyled">
                                {% set list = styled.liste %}
                                {% for list in list %}
                                <li>
                                    <div class="icon">
                                        <span class="icon-tick"></span>
                                    </div>
                                    <div class="text-box">
                                        <p>{{ list|striptags|default('Sed ut perspiciatis unde omnis iste natus error')|raw}}</p>
                                    </div>
                                </li>
                                {% endfor %}
                                <p class="portfolio-details__text-2 mt-5">{{styled.texte2|raw  }}</p>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
    </section>

    <section class="style-details p-5 mb-5 ">

        {% set image1 = vich_uploader_asset(styled.image.first) %}
        {% set image2 = vich_uploader_asset(styled.image[1]) %}
        {% set image3 = vich_uploader_asset(styled.image[2]) %}

        {#                {% for img in styled.image%}    {% endfor %}#}



        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="margin:auto;justify-content:center; width: 75%; max-height: 650px">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active" style="background-color: #00b3ff"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1" style="background-color: #00b3ff"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2" style="background-color: #00b3ff"></li>
            </ol>
            <div class="carousel-inner">

                <div class="carousel-item active">
                    <img id="styleImg" class="d-block w-100" src="{{ image1 }}" alt="styled.image[0].titre" width="550px" style="background-color:#B8B8B8;max-height:650px;object-fit: contain">
                </div>



                <div class="carousel-item">
                    <img id="styleImg" class="d-block w-100" src="{{ image2 }}" alt="styled.image[1].titre" width="550px" style="background-color:#B8B8B8; max-height:650px; object-fit: contain">
                </div>

                <div class="carousel-item">
                    <img id="styleImg" class="d-block w-100" src="{{ image2 }}" alt="styled.image[2].titre" width="550px" style="background-color:#B8B8B8 ;max-height:650px;object-fit: contain">
                </div>

            </div>
            <a id="styleCarouselPrev" class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a id="styleCarouselNext" class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>



    </section>


{% endblock %}
