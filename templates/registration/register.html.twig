{#{% extends 'base.html.twig' %}#}


{% block stylesheets %}

<link rel="stylesheet" href="{{ asset('assets/css/kitecx.css') }}"/>
<link rel="stylesheet" href="{{ asset('assets/css/kitecx-responsive.css') }}"/>

<link rel="stylesheet" href="{{ asset('assets/vendors/bootstrap/css/bootstrap.min.css') }}"/>
{% endblock %}




{% block title %}{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
 <div class="container w-25 h-50 d-flex flex-column align-content-center justify-content-center mt-5 m-auto form-control p-3">

     <h1 class="mb-4">S'enregistrer</h1>
{#     {'attr': {'class': 'ml-4'}}#}
     {{ form_errors(registrationForm, ) }}

     {{ form_start(registrationForm) }}
     {{ form_row(registrationForm.email) }}
     {{ form_row(registrationForm.plainPassword, {
         label: 'Mot de passe'
     }) }}
     {{ form_row(registrationForm.agreeTerms) }}

     <button type="submit" class="btn bg-light thm-btn contact-page__btn mt-4 contact-page__input-box fw-bold border p-5 pt-1 pb-1">S'enregistrer</button>
     {{ form_end(registrationForm) }}


 </div>

{% endblock %}
