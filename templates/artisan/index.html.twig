{% extends 'base.html.twig' %}

{% block title %}Artisan index{% endblock %}

{% block body %}
    <h1>Artisan index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Raison_sociale</th>
                <th>Nom_etablissement</th>
                <th>Siret</th>
                <th>Nom_gerant</th>
                <th>Prenom_gerant</th>
                <th>Date_naissance</th>
                <th>Numero_rue</th>
                <th>Code_postal</th>
                <th>Localite</th>
                <th>Tel_fixe</th>
                <th>Tel_portable</th>
                <th>Fax</th>
                <th>Note_globale</th>
                <th>Commentaire</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for artisan in artisans %}
            <tr>
                <td>{{ artisan.id }}</td>
                <td>{{ artisan.raisonSociale }}</td>
                <td>{{ artisan.nomEtablissement }}</td>
                <td>{{ artisan.siret }}</td>
                <td>{{ artisan.nomGerant }}</td>
                <td>{{ artisan.prenomGerant }}</td>
                <td>{{ artisan.dateNaissance ? artisan.dateNaissance|date('Y-m-d') : '' }}</td>
                <td>{{ artisan.numeroRue }}</td>
                <td>{{ artisan.codePostal }}</td>
                <td>{{ artisan.localite }}</td>
                <td>{{ artisan.telFixe }}</td>
                <td>{{ artisan.telPortable }}</td>
                <td>{{ artisan.fax }}</td>
                <td>{{ artisan.noteGlobale }}</td>
                <td>{{ artisan.commentaire }}</td>
                <td>{{ artisan.status }}</td>
                <td>
                    <a href="{{ path('app_artisan_show', {'id': artisan.id}) }}">show</a>
                    <a href="{{ path('app_artisan_edit', {'id': artisan.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="17">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_artisan_new') }}">Create new</a>
{% endblock %}
